    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #e0e0e0;
        }
        .header {
            background-color: #1e1e1e;
            color: #e0e0e0;
            padding: 15px 0;
        }
        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .logo {
            font-size: 28px; /* Increased logo font size */
            font-weight: bold;
            color: #f39c12;
        }
        .nav a {
            color: #e0e0e0;
            text-decoration: none;
            margin-left: 20px;
            font-size: 18px; /* Increased font size */
            padding: 8px 16px; /* Added padding for better clickability */
            border-radius: 4px; /* Rounded corners for links */
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        }
        .nav a:hover {
            background-color: #f39c12; /* Yellow background on hover */
            color: #121212; /* Dark text on hover */
        }
        .call-btn, .reserve-btn {
            padding: 8px 16px;
            border: 1px solid #f39c12;
            border-radius: 4px;
            text-decoration: none;
            font-size: 16px; /* Increased font size */
        }
        .call-btn {
            color: #f39c12;
            background-color: transparent;
        }
        .reserve-btn {
            background-color: #f39c12;
            color: #121212;
        }
        .main-content {
            max-width: 1200px;
            margin: 40px auto;
            padding: 20px;
            background-color: #1e1e1e;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
        }
        h1, h2 {
            color: #f39c12;
            margin-bottom: 20px; /* Added margin for spacing */
        }
        .offer-dishes {
            display: flex;
            justify-content: space-between;
            margin-bottom: 40px;
        }
        .offer-dish {
            width: 48%;
            position: relative;
            border: 1px solid #333;
            border-radius: 8px;
            overflow: hidden;
            background-color: #2c2c2c;
            padding: 10px; /* Added padding for better spacing */
        }
        .offer-dish img {
            width: 100%;
            height: 50%; /* Maintains aspect ratio */
            border-radius: 8px 8px 0 0; /* Rounded top corners */
        }
        .offer-price {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #f39c12;
            color: #121212;
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: bold;
        }
        .popular-dishes {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }
        .popular-dish {
            background-color: #2c2c2c;
            padding: 15px;
            border-radius: 8px;
            text-align: center; /* Centered text */
        }
        .popular-dish img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 8px; /* Rounded corners */
        }
        .popular-dish h3 {
            margin: 10px 0 5px;
            color: #f39c12;
        }
        .popular-dish p {
            margin: 0;
            color: #bbb;
        }
    </style>
